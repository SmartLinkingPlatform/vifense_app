<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="10dp"
                        android:top="2dp"
                        android:right="10dp"
                        android:bottom="2dp"
                        />

                    <gradient android:startColor="@color/input_color" android:endColor="@color/input_color" android:angle="0" />
                    <stroke android:width="1dip" android:color="@color/input_color" />
                    <corners android:radius="3px" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/dropdown_arrow"/>
            </item>
        </layer-list>
    </item>
</selector>