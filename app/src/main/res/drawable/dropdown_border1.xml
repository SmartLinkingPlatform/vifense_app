<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="10dp"
                        android:top="2dp"
                        android:right="10dp"
                        android:bottom="2dp"
                        />

                    <gradient android:startColor="@android:color/transparent" android:endColor="@android:color/transparent" android:angle="0" />
                    <stroke android:width="1dip" android:color="@color/border_color" />
                    <corners android:radius="10px" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/dropdown_arrow1"/>
            </item>
        </layer-list>
    </item>
</selector>